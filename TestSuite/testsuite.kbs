call section("Error Trapping - Try Catch")
###################################################
onerror trycatchtest
a = 0
try
   a = a + 1
   try
      a = a + 16
      throwerror 9999
      a = a + 32
   catch
      a = a + 64
      #error in catch actually back at previous level
      throwerror 9999
      a = a + 8
   end try
   a = a + 2
catch
   a = a + 4
   try
      a = a + 128
      throwerror 9999
      a = a + 256
   catch
      a = a + 512
      # error in catch/catch back in onerror
      throwerror 9999
      a = a + 1024
   end try
   a = a + 8
end try
offerror
call n("a=3805 try/catch",a,3805)

