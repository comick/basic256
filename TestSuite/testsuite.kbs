total = 0
for t = 1 to 100
   if t = 3 or t = 4 or t = 10 then
      print "continue for = skip " + t
      continuefor
   end if
   total = total + t
   print t + " " + total
   if total > 100 then
      print "exit for"
      exit for
   end if
next t
call n("FOR - Exit and Continue", total, 103)
# test do
