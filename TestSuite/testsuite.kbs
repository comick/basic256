t = 0
do
t++
   if t = 3 or t = 4 or t = 10 then
      print "continue do = skip " + t
      continue do
   end if
   total = total + t
   print t + " " + total
   if total > 100 then
      print "exit do"
      exit do
   end if
until t >= 100
call n("DO - Exit and Continue", total, 103)
# test while
